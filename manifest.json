{
  "manifest_version": 2,
  "name": "Site Security Tooklit",
  "version": "0.2",
  "developer": {
    "name": "Carl Clegg",
    "url": "https://github.com/i-am-cjc/security-addon"
  },

  "icons": {
      "48": "icon.svg",
      "96": "icon.svg"
  },
  "description": "Adds an entry to the context menu to scan the current site with various online services.",

  "permissions": [
      "contextMenus", 
      "tabs",
      "*://api.konvert.me/*",
      "webRequest"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
